        <UserControls:ChannelsDisplayUC Grid.RowSpan="2"/>
        <UserControls:MessagesDisplayUC Grid.Column="1"/>
        <UserControls:TextAreaUC Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
